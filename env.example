# ==== HTTP Server Port ====
PORT_HTTP=3000

# ==== Permitted Hosts ====
# Hosts que podem acessar o servidor (separados por vírgulas, sem espaços)
HOST_ALLOWED=http://localhost:3000,http://localhost:4000

# ==== HTTP Limits ====
HTTP_MAX_CONNECTIONS=50000
HTTP_MAX_MESSAGE_SIZE=262144   # 256 KB

# ==== WebSocket Limits ====
SOCKET_MAX_CONNECTIONS=1000
SOCKET_MAX_MESSAGE_SIZE=1048576   # 1 MB
SOCKET_INACTIVITY_TIMEOUT=600000  # 10 minutos (em milissegundos)

# ==== Limite de blocos por requisição ====
MAX_BLOCKS_PER_REQUEST=1000

# ==== Configurações do PostgreSQL ====
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=12345
PGDATABASE=onpostt
PGPORT=5432
